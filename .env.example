# Copy this file to .env and fill in values

# Core API (OpenRouter-only)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Bot (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
ADMIN_API_TOKEN=
SHOW_TOPIC_ID=0

# Storage
# Prefer HTTP if available; fallback to local path if unset
CHROMA_DB_URL=
CHROMA_DB_PATH=db

# Watcher behavior (defaults favor capturing topics)
WATCHER_LENIENT_VALIDATION=1
WATCHER_ENFORCE_STYLE_AUDIT=0
WATCHER_JARGON_THRESHOLD=4
WATCHER_CLICHE_THRESHOLD=4

# Style (generator)
# Enforce non-corporate, human NYC bar voice
ENFORCE_STYLE_AUDIT=1
# Max revision rounds by LLM to fix style
STYLE_REVISION_ROUNDS=2
# Heuristics: block hedging/jargon if count >= threshold
STYLE_HEDGING_THRESHOLD=1
STYLE_JARGON_BLOCK_THRESHOLD=1
# LLM audit scores that trigger revision
STYLE_AUDIT_JARGON_SCORE_MIN=2
STYLE_AUDIT_CLICHE_SCORE_MIN=2

# Warden mechanical rules
ENFORCE_NO_COMMAS=1
ENFORCE_NO_AND_OR=1
WARDEN_WORDS_PER_LINE_LO=5
WARDEN_WORDS_PER_LINE_HI=12
MID_MIN=180
MID_MAX=230
LONG_MIN=240
LONG_MAX=280

# Generation presets
POST_PRESET=balanced
POST_TEMPERATURE=0.6

# Embeddings
EMBED_MODEL=jinaai/jina-embeddings-v2-base-en

# Post categories for variant C
# Optional: override path to JSON categories file
POST_CATEGORIES_PATH=config/post_categories.json

# Similarity (duplicate check)
# Distance threshold (cosine, 0=identical). Lower = less strict. Default 0.20
SIMILARITY_THRESHOLD=0.20

# ICP (audience/persona)
# Optional path to ICP description used to tailor A/B/C
ICP_PATH=config/icp.md
